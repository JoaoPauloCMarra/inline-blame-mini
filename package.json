{
  "name": "inline-blame-mini",
  "displayName": "Inline Blame Mini",
  "description": "Lightweight git blame information for the current cursor line",
  "version": "0.1.0",
  "publisher": "JoaoPauloCMarra",
  "license": "MIT",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#232323",
    "theme": "dark"
  },
  "categories": [
    "SCM Providers"
  ],
  "keywords": [
    "git",
    "blame",
    "scm",
    "inline",
    "lightweight"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/JoaoPauloCMarra/inline-blame-mini"
  },
  "bugs": {
    "url": "https://github.com/JoaoPauloCMarra/inline-blame-mini/issues"
  },
  "homepage": "https://github.com/JoaoPauloCMarra/inline-blame-mini#readme",
  "engines": {
    "vscode": "^1.104.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "inline-blame-mini.showHelp",
        "title": "Show Troubleshooting Guide",
        "category": "Inline Blame Mini"
      },
      {
        "command": "inline-blame-mini.toggle",
        "title": "Toggle Inline Blame",
        "category": "Inline Blame Mini"
      },
      {
        "command": "inline-blame-mini.refresh",
        "title": "Refresh Blame Information",
        "category": "Inline Blame Mini"
      },
      {
        "command": "inline-blame-mini.showCommitDetails",
        "title": "Show Commit Details",
        "category": "Inline Blame Mini"
      },
      {
        "command": "inline-blame-mini.openSettings",
        "title": "Open Settings",
        "category": "Inline Blame Mini"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Inline Blame Mini",
      "properties": {
        "inline-blame-mini.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable inline blame information display"
        },
        "inline-blame-mini.format": {
          "type": "string",
          "default": "{author}, {timeAgo} â€¢ {summary}",
          "description": "Format template for inline blame text. Available variables: {author}, {timeAgo}, {summary}, {hash}, {prNumber}"
        },
        "inline-blame-mini.summaryMaxLength": {
          "type": "number",
          "default": 60,
          "minimum": 10,
          "maximum": 200,
          "description": "Maximum length of commit summary before truncation"
        },
        "inline-blame-mini.showOnlyWhenChanged": {
          "type": "boolean",
          "default": true,
          "description": "Only show blame when cursor moves to a different line"
        },
        "inline-blame-mini.style.color": {
          "type": "string",
          "default": "rgba(136, 136, 136, 0.7)",
          "description": "Color of the inline blame text (CSS color format)"
        },
        "inline-blame-mini.style.fontStyle": {
          "type": "string",
          "enum": [
            "normal",
            "italic",
            "oblique"
          ],
          "default": "italic",
          "description": "Font style of the inline blame text"
        },
        "inline-blame-mini.style.fontSize": {
          "type": "string",
          "default": "0.9em",
          "description": "Font size of the inline blame text (CSS font-size format)"
        },
        "inline-blame-mini.style.margin": {
          "type": "string",
          "default": "0 0 0 1rem",
          "description": "Margin around the inline blame text (CSS margin format)"
        },
        "inline-blame-mini.style.position": {
          "type": "string",
          "enum": [
            "end-of-line",
            "above-line",
            "below-line"
          ],
          "default": "end-of-line",
          "description": "Position of the inline blame text relative to the code line"
        },
        "inline-blame-mini.statusBar.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Show extension status and file context in the status bar"
        },
        "inline-blame-mini.excludeFiles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Glob patterns for files to exclude from blame information"
        },
        "inline-blame-mini.includeFiles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/*"
          ],
          "description": "Glob patterns for files to include for blame information"
        }
      }
    }
  },
  "scripts": {
    "lint": "bunx eslint .",
    "lint:fix": "bunx eslint . --fix",
    "prettier": "bunx prettier --write .",
    "format": "bun run lint:fix && bun run prettier",
    "package": "vsce package",
    "build": "bun run package",
    "vscode:prepublish": "bun run lint && bun run format",
    "publish": "vsce publish"
  },
  "extensionDependencies": [
    "vscode.git"
  ],
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/vscode": "^1.104.0",
    "@vscode/vsce": "^3.6.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2"
  }
}
